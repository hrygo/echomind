{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "EchoMind",
    "version": "1.2.0",
    "identifier": "com.echomind.desktop",
    "build": {
        "beforeDevCommand": "cd ../../frontend && pnpm dev",
        "beforeBuildCommand": "cd ../../frontend && BUILD_MODE=desktop pnpm build",
        "devUrl": "http://localhost:3000",
        "frontendDist": "../../frontend/out"
    },
    "app": {
        "windows": [
            {
                "title": "EchoMind",
                "width": 1200,
                "height": 800
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}